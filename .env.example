# LLM Orchestrator Configuration

# Basic Configuration
COMPOSE_PROJECT_NAME=llm-orchestrator
ENVIRONMENT=private  # private, public, development, production

# GPU Configuration
GPU_PROFILE=nvidia  # nvidia, amd, cpu, none

# Model Configuration
DEFAULT_LOCAL_MODEL=llama3.1:8b
DEFAULT_CLOUD_MODEL=gpt-4o-mini
EMBEDDING_MODEL=nomic-embed-text

# Database Configuration
POSTGRES_PASSWORD=your_secure_postgres_password_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here

# Neo4j Configuration
NEO4J_PASSWORD=your_secure_neo4j_password_here

# n8n Configuration
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your_secure_n8n_password_here

# Langfuse Configuration
LANGFUSE_PUBLIC_KEY=pk-lf-your_public_key_here
LANGFUSE_SECRET_KEY=sk-lf-your_secret_key_here
LANGFUSE_SALT=your_random_salt_here

# Open WebUI Configuration
WEBUI_SECRET_KEY=your_secure_webui_secret_here

# Cloud API Keys (Optional - for fallback routing)
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here
GOOGLE_API_KEY=your_google_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# AgentScope Configuration
AGENTSCOPE_LOG_LEVEL=INFO
AGENTSCOPE_MAX_WORKERS=4
AGENTSCOPE_MEMORY_LIMIT=8GB

# RouteLLM Configuration
ROUTELLM_COST_THRESHOLD=0.001
ROUTELLM_LATENCY_THRESHOLD=2000
ROUTELLM_QUALITY_THRESHOLD=0.8

# Mem0 Configuration
MEM0_VECTOR_STORE=qdrant
MEM0_GRAPH_STORE=neo4j
MEM0_EMBEDDING_MODEL=nomic-embed-text

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Monitoring Configuration
ENABLE_TELEMETRY=false
ENABLE_METRICS=true
METRICS_PORT=9090

# Development Configuration
DEBUG_MODE=false
HOT_RELOAD=false
LOG_LEVEL=INFO

# Public Deployment Configuration (only for public environment)
DOMAIN_NAME=your-domain.com
EMAIL=your-email@domain.com
CLOUDFLARE_API_TOKEN=your_cloudflare_token_here

# Resource Limits
OLLAMA_MAX_MEMORY=16GB
QDRANT_MAX_MEMORY=4GB
NEO4J_MAX_MEMORY=2GB
N8N_MAX_MEMORY=1GB

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Feature Flags
ENABLE_CLOUD_FALLBACK=true
ENABLE_ADVANCED_ROUTING=true
ENABLE_MEMORY_COMPRESSION=true
ENABLE_GRAPH_RAG=true
ENABLE_WORKFLOW_AUTOMATION=true
